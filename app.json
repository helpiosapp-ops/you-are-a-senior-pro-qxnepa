
{
  "expo": {
    "name": "you-are-a-senior-pro",
    "slug": "you-are-a-senior-pro",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon-bwd.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/app-icon-bwd.png",
      "resizeMode": "contain",
      "backgroundColor": "#7A9B8E"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.exitplanner.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "This app does not access your photos."
      },
      "buildNumber": "2"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/app-icon-bwd.png",
        "backgroundColor": "#7A9B8E"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.exitplanner.app",
      "versionCode": 2,
      "permissions": []
    },
    "web": {
      "favicon": "./assets/images/app-icon-bwd.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "expo-router",
      "expo-web-browser"
    ],
    "scheme": "you-are-a-senior-pro",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {}
    },
    "description": "ExitPlanner is a calm, offline, privacy-first app that helps professionals prepare a thoughtful exit from a job. Plan resignations, prepare for layoffs, or organize career breaks with guided checklists and exportable plans. All data stays on your deviceâ€”no cloud sync, no tracking, complete privacy."
  }
}
